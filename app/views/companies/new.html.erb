<h1 align="center" class="job-form"
    xmlns="http://www.w3.org/1999/html">Signup for SolvedByCode</h1>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@company, :html => {class: "form-horizontal", role: "form"}) do |f|%>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :email, class: "form-control",placeholder: "Enter email", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label "Company Name" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :companyname, class: "form-control", placeholder: "Enter Company name" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :password %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control",placeholder: "Enter password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label  "Company location" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :location, class: "form-control", placeholder: "Enter company location" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :description, class: "form-control", placeholder: "Enter company description" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label "Company benefits" %>
        </div>
        <div class="dropdown">
          <div class="btn btn-primary dropdown-toggle form-button" data-toggle="dropdown">
            Add Benefits <span class="caret"></span>
          </div>
          <div class="dropdown-menu">
            <div class="checkbox-group"><%= f.check_box :benefits, {multiple: true}, "Gym membership", nil %> <span>Gym membership</span></div><br>
            <div class="checkbox-group"> <%= f.check_box :benefits, {multiple: true}, "Dental care", nil %> <span>Dental care</span></div><br>
            <div class="checkbox-group"><%= f.check_box :benefits, {multiple: true}, "Health care", nil %> <span>Health care</span></div><br>
            <div class="checkbox-group"><%= f.check_box :benefits, {multiple: true}, "Work remotely", nil %> <span>Work remotely</span></div><br>
            <div class="checkbox-group"><%= f.check_box :benefits, {multiple: true}, "Pension plans", nil %> <span>Pension plans</span></div><br>
            <div class="checkbox-group"><%= f.check_box :benefits, {multiple: true}, "Daily free meals", nil %> <span>Daily free meals</span></div><br>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :website %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :website, class: "form-control",placeholder: "Enter company website"%>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :industries %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :industries, class: "form-control", placeholder: "Enter company industries" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :size %>
        </div>
        <div class="col-sm-8">
          <%= f.radio_button :size, "<200 people" %> <span><200 people   </span> <%= f.radio_button :size, "201-500 people" %> <span>201-500 people   </span> <%= f.radio_button :size, "501-1000 people"  %> <span>501-1000 people   </span> <%= f.radio_button :size, ">1000 people" %> <span>>1000 people</span>
        </div>
      </div>
      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>