<h1 align="center" class="job-form"
    xmlns="http://www.w3.org/1999/html">Post a Job</h1>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@job, :html => {class: "form-horizontal", role: "form"}) do |f|%>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Job Title", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <button type="button" class="btn btn-primary btn-lg form-button" data-toggle="modal" data-target="#job-description-modal">
          Add job description
        </button>

        <!-- Modal -->
        <div class="modal fade" id="job-description-modal" tabindex="-1" role="dialog" aria-labelledby="job-description-modalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h3 class="modal-title" id="myModalLabel">Add a job description</h3>
              </div>
              <div class="col-sm-9 description-field" align="center" id="job-description-field">
                <%= f.text_area :description, class: "form-control", placeholder: "Job description", rows: "15", cols: "40"%>
              </div>
              <% 17.times do %>
                <br>
              <% end %>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Done</button>
              </div>
            </div>
          </div>
        </div>
        <%= f.check_box :description, {multiple: false}, "Add from pdf", nil %> <span>Add job description from pdf</span>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :location %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :location, class: "form-control", placeholder: "Job Location" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :field %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :field, class: "form-control", placeholder: "Field of Work ex: Aeronautics, Economics"%>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :technologies %>
        </div>
        <div class="dropdown">
          <div class="btn btn-primary dropdown-toggle form-button" data-toggle="dropdown">
            Add Technologies <span class="caret"></span>
          </div>
          <div class="dropdown-menu">
            <div class="col-sm-8 tech-checkboxes">
              <div class="checkbox-group"><%= f.check_box :technologies, {multiple: true}, "ruby", nil %><span>Ruby</span></div>
              <div class="checkbox-group"><%= f.check_box :technologies, {multiple: true}, "java", nil %><span>Java</span></div>
              <div class="checkbox-group"><%= f.check_box :technologies, {multiple: true}, "c++", nil %> <span>C++</span></div>
              <div class="checkbox-group"><%= f.check_box :technologies, {nultiple: true}, "python", nil %> <span>Python</span></div>
              <div class="checkbox-group"><%= f.check_box :technologies, {multiple: true}, "SQL", nil %> <span>SQL</span></div>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :job_type %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :job_type, class: "form-control", placeholder: "Part time or full time?" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :experience_level %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :experience_level, class: "form-control", placeholder: "ex: Junior" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :pay %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :pay, class: "form-control", placeholder: "Expected salary of job" %>
        </div>
      </div>
      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>