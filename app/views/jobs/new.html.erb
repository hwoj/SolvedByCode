<h1 align="center" class="job-form">Post a Job</h1>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@job, :html => {class: "form-horizontal", role: "form"}) do |f|%>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Job Title", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :title, class: "form-control", placeholder: "Job Description" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :location %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :location, class: "form-control", placeholder: "Job Location" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :field %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :field, class: "form-control", placeholder: "Field of Work eg: Aeronautics, Economics" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :pay %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :pay, class: "form-control", placeholder: "Expected salary of job" %>
        </div>
      </div>
      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>