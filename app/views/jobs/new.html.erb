<h1 align="center" class="job-form">Post a Job</h1>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@job, :html => {class: "form-horizontal", role: "form"}) do |f|%>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Job Title", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, class: "form-control", placeholder: "Job Description" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :location %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :location, class: "form-control", placeholder: "Job Location" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :field %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :field, class: "form-control", placeholder: "Field of Work ex: Aeronautics, Economics"%>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :technologies %>
        </div>
        <div class="dropdown">
          <div class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Add Technologies <span class="caret"></span>
          </div>
          <div class="dropdown-menu">
            <div class="col-sm-8">
              <%= f.check_box :technologies, {multiple: true}, "ruby", nil %>Ruby
              <%= f.check_box :technologies, {multiple: true}, "java", nil %>Java
              <%= f.check_box :technologies, {multiple: true}, "c++", nil %> C++
              <%= f.check_box :technologies, {nultiple: true}, "python", nil %> Python
              <%= f.check_box :technologies, {multiple: true}, "SQL", nil %> SQL
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :job_type %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :job_type, class: "form-control", placeholder: "Part time or full time?" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :experience_level %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :experience_level, class: "form-control", placeholder: "ex: Junior" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :pay %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :pay, class: "form-control", placeholder: "Expected salary of job" %>
        </div>
      </div>
      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>